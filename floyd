#include <stdio.h>
int numero = 0; 
int linhatotal;
int main(){
    printf("quantas linhas gostaria?\n");
    scanf("%d", &linhatotal);
    for(int linhas =0; linhas < linhatotal; linhas++) {
        for(int i = 0; i <= linhas; i++) {
            
            numero++;
            
            printf("%d ", numero);
        }
        printf("\n");
    }

}
